
<% if user_signed_in? %>
<h1>Friends List</h1>

<div id="friends">
<table class="table table-striped table-bordered table-hover">
<thead class="table-dark">
<tr>
<th>Name</th>
<th>Email</th>
<th>Phone</th>
<th>Twitter</th>

<th></th>
</tr>
</thead>
<tbody>
  <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
    <tr id="<%= dom_id friend %>">
    <td><%= link_to friend.first_name + '  ' + friend.last_name, friend, class:"text-decoration-none" %></td>
        
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
       
        
        

        <td><%= button_to "Destroy", friend, method: :delete, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
      <% end %>
  <% end %>
</tbody>
</table>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<% else %>
<div class="card">
  <div class="card-header">
  <h2> Welcome to the Friend List Up<h2>
  </div>
  <div class="card-body">
  <h4> You can add Your friends list with their contacts Info</h4>
  <h5 class="text-primary"> to have your friends list please login<h5>
  <%= link_to "Sign In", new_user_session_path, Class:"btn btn-secondary" %>
  </div>
</div>

<% end %>