

<h1>Friends List</h1>

<div id="friends">
<table class="table table-striped table-bordered table-hover">
<thead class="table-dark">
<tr>
<th>First Name</th>
<th>Last Name</th>
<th>Email</th>
<th>Phone</th>
<th>Twitter</th>
<th>User_id</th>
<th colspan="3"></th>
</tr>
</thead>
<tbody>
  <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
    <tr id="<%= dom_id friend %>">
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <td><%= link_to "Edit", edit_friend_path(friend), class:"text-decoration-none" %></td>
        <td><%= link_to "Show", friend, class:"text-decoration-none" %></td>

        <td><%= button_to "Destroy", friend, method: :delete, class:"text-decoration-none btn btn-secondary" %></td>
      </tr>
      <% end %>
  <% end %>
</tbody>
</table>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
